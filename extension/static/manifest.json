{
  "manifest_version": 3,
  "name": "CS 180 Attachment Identifier",
  "version": "1.0.0",
  "description": "Detects if an email needs attachments",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://ulyzses.pythonanywhere.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://mail.google.com/mail/*"],
      "js": ["content.js"]
    }
  ],
  "run_at": "document_start"
}